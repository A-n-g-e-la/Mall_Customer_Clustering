        "from sklearn.preprocessing import StandardScaler\n",
        "from sklearn.decomposition import PCA\n",
        "\n",
        "# 1. Identify Continuous Features\n",
        "continuous_features = ['carat', 'depth', 'table', 'x', 'y', 'z']\n",
        "X_full_continuous = diamonds_model[continuous_features]\n",
        "y_q4 = diamonds_model['price']\n",
        "\n",
        "# 2. Standardize the Continuous Data\n",
        "scaler = StandardScaler()\n",
        "X_scaled = scaler.fit_transform(X_full_continuous)\n",
        "\n",
        "# 3. Apply PCA (get all 6 components)\n",
        "pca = PCA(n_components=len(continuous_features))\n",
        "X_pca = pca.fit_transform(X_scaled)\n",
        "\n",
        "# 4. Select top 2 correlated PCs\n",
        "pca_df = pd.DataFrame(data=X_pca,\n",
        "                      columns=[f'PC{i+1}' for i in range(len(continuous_features))])\n",
        "pca_df['price'] = y_q4\n",
        "\n",
        "# Calculate correlation of each PC with 'price'\n",
        "price_correlations = pca_df.corr()['price'].abs().sort_values(ascending=False)\n",
        "top_2_pcs = price_correlations.index[1:3].tolist() # Select the top 2 PCs (excluding 'price')\n",
        "\n",
        "X_pca_selected = pca_df[top_2_pcs]\n",
        "print(f\"Top 2 Principal Components selected based on correlation with price: {top_2_pcs}\")"
